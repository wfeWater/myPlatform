<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.wfewater.dao.UserMapper" >
    <insert id="add" parameterType="cn.wfewater.domain.User">
        insert into sys_users ( username,password,telnum,locked)
        VALUES (#{userName},#{password},#{telNum},0)
    </insert>

    <select id="getUserCount" resultType="java.lang.Integer" >
        select
               count(*)
        from myplatform.sys_users
    </select>
    <select id="existUsername" parameterType="string" resultType="java.lang.Integer">
        select count(*) from sys_users
        where username=#{username,jdbcType=VARCHAR}
    </select>
    <select id="selectUserByName" parameterType="string" resultType="cn.wfewater.domain.User">
        select id,username,password,telnum from sys_users
        where username=#{username,jdbcType=VARCHAR}
    </select>
    <select id="getUserById" parameterType="integer" resultType="cn.wfewater.domain.User">
        select id,username,password,telnum
        from sys_users where id=#{uid};
    </select>
